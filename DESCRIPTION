Package: MPLNClust
Type: Package
Title: Mixtures of Multivariate Poisson-Log Normal Model for Clustering Count Data
Version: 0.1.0
Authors@R: c(
    person("Anjali", "Silva", email = "anjali.silva@uhnresearch.ca", role = c("aut", "cre")),
